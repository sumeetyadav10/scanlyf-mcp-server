{
  "name": "scanlyf-mcp",
  "version": "2.0.0",
  "description": "Enterprise-grade AI-powered nutrition tracking MCP server with advanced features",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "test": "node test/test-suite.js",
    "test:watch": "nodemon test/test-suite.js",
    "test:server": "node test-server.js",
    "generate-secret": "node -e \"console.log('JWT_SECRET=' + require('crypto').randomBytes(64).toString('hex'))\"",
    "generate-token": "node generate-token.js",
    "setup": "npm install && npm run generate-secret",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.js\"",
    "check-env": "node -e \"require('dotenv').config(); const required=['FIREBASE_PROJECT_ID','JWT_SECRET']; const missing=required.filter(k=>!process.env[k]); if(missing.length){console.error('Missing:',missing);process.exit(1)}else{console.log('âœ… All required env vars present')}\"",
    "db:backup": "node scripts/backup-firestore.js",
    "cache:clear": "node -e \"const c=require('./lib/cacheService');c.clearNamespace('nutrition').then(()=>console.log('Cache cleared'))\"",
    "health": "curl http://localhost:3000/ || echo 'Server not running'",
    "postinstall": "node -e \"console.log('\\nðŸŽ‰ Scanlyf MCP installed! Run npm run setup to complete configuration\\n')\""
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "mcp",
    "nutrition",
    "ai",
    "puch"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/vision": "^5.3.3",
    "@json2csv/plainjs": "^7.0.6",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.104.0",
    "pdfkit": "^0.15.1",
    "redis": "^3.1.2",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3"
  },
  "optionalDependencies": {
    "sharp": "^0.33.5"
  }
}
